<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens30"
        android:layout_marginRight="@dimen/dimens30"
        android:layout_marginTop="@dimen/dimens15"
        android:layout_marginBottom="@dimen/dimens15"
        android:background="@drawable/help_tab_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/report_heart_rate"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:text="@string/report_heart_rate"
            android:background="@drawable/help_tab_selector"
            android:textColor="@color/textcolor_9B" />

        <Button
            android:id="@+id/report_blooth_pressure"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:text="@string/report_blooth_pressure"
            android:background="@drawable/help_tab_selector"
            android:textColor="@color/textcolor_9B" />


        <Button
            android:id="@+id/report_step"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1.0"
            android:text="@string/report_blooth_step"
            android:background="@drawable/help_tab_selector"
            android:textColor="@color/textcolor_9B" />

    </LinearLayout>

    <View style="@style/Style.Divider.Horizontal.Default" />

    <FrameLayout
        android:id="@+id/report_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>