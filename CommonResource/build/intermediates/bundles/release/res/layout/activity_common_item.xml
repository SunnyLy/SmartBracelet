<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_item_bg"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/btn_common_topbar"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <ImageView
        android:id="@+id/iv_common_left"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_common_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_common_left"
        android:textColor="#FF545454"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_common_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/user_center_arrow" />

    <!-- android:layout_toRightOf="@+id/tv_common_left" -->

    <TextView
        android:id="@+id/tv_common_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/iv_common_arrow"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <com.het.comres.view.imageview.RoundImageView
        android:id="@+id/iv_commom_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_common_arrow"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_common_diliver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/common_dividercolor" />

</RelativeLayout><!-- From: file:/E:/OuterProj/SmartBracelet/CommonResource/res/layout/activity_common_item.xml -->